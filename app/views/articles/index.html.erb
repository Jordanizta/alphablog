<p id="notice"><%= notice %></p>

<h1>Listando todos os artigos</h1>

<table>
  <thead>
    <tr>
      <th>ID</th>
      <th>Title</th>
      <th>Description</th>
      <th>Author</th>
      <th>Data criação</th>
      <th>Data atualização</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @articles.each do |article| %>
      <tr>
        <td><%= article.id %></td>
        <td><%= article.title %></td>
        <td><%= article.description %></td>
        <td><%= article.autor %></td>
        <td><%= article.created_at %></td>
        <td><%= article.updated_at %></td>
        <td><%= link_to 'Show', article %></td>
        <td><%= link_to 'Edit', edit_article_path(article) %></td>
        <td><%= link_to 'Destroy', article, method: :delete, data: { confirm: 'Tem certeza?' } %></td>
      </tr>
    <% end %>
  </tbody>

  <%= form_tag(:url => {:controller => 'article', :action => "index"}, :method => "get") do %>
    Ordenar por:
    <%= select_tag :article,  options_for_select(["ID"], params[:article]), id: "different_option_value_html", onchange: "this.form.submit();", include_blank: "Teste" %>
  <% end %>

</table>

<br>

<%= link_to 'New Article', new_article_path %>
