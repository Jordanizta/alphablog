<%= form_with(model: user, local: true) do |form| %>

  <%= render 'layouts/shared/form/errors', object: user %>

    <div class= "form-horizontal">
      <div class='col-xs-12'>

        <div class="form-group">
          <div class ="control-label col-sm-2">
            <%= form.label :username %>
          </div>
          <div class="col-sm-8">
            <%= form.text_field :username, class: "form-control", placeholder: "Digite seu nome de usuÃ¡rio", autofocus: true %>
          </div>
        </div>

        <div class="form-group">
          <div class="control-label col-sm-2">
            <%= form.label :email %>
          </div>
          <div class="col-sm-8">
            <%= form.email_field :email, class: "form-control", placeholder: "Digite seu email", autofocus: true %>
          </div>
        </div>

        <div class="form-group">
          <div class="control-label col-sm-2">
            <%= form.label :password %>
          </div>
          <div class="col-sm-8">
            <%= form.password_field :password, class: "form-control", placeholder: "Digite sua senha", autofocus: true %>
          </div>
        </div>

        <div class="form-group">
          <div class="col-sm-offset-2 col-sm-10">
              <%= form.submit(@user.new_record? ? "Inscrever-se" : "Atualizar conta", class: 'btn btn-danger btn-lg') %>
          </div>
        </div>
      </div>
    </div>

<% end %>