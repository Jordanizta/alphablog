<h1 class="center">Listando todas as categorias</h1>

<div class="center">
  <%= will_paginate %>
  <% @categories.each do |category| %>
    <ul class="listing">
      <div class="row"> 
        <div class="well col-md-4 col-md-offset-4">
          <li class="article-title">
            <%= link_to "#{category.name}", category_path(category) %>
          </li>
          <li><small><%= pluralize(category.articles.count, "artigos") %></small></li>
          <% if logged_in? and current_user.admin? %>
            <% if category.articles.empty? %>
              <span class="badge"><%= link_to "Deletar categoria", category_path(category), method: :delete,
            data: { confirm: "Tem certeza?" } %></span>
            <% end %>
          <% end %>
        </div>
      </div>
    </ul>
  <% end %>
  <%= will_paginate %>
</div>