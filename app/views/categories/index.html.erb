<h1 class="center">Listando todas as categorias</h1>

<div class="center">
  <% @categories.each do |category| %>
    <ul class="listing">
      <div class="row"> 
        <div class="well col-md-4 col-md-offset-4">
          <li class="article-tile">
            <% link_to "#{category.name}", category_path(category) %>
          </li>
        </div>
      </div>
    </ul>
  <% end %>
</div>