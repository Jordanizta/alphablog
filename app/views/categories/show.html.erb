<p id="notice"><%= notice %></p>

<h1 class="center" style="color:#6441a5"><%= "Categoria: " + @category.name %></h1>
  <% if logged_in? and current_user.admin? %>
    <div class="row center">
      <span class="badge"><%= link_to "Editar nome de categoria", edit_category_path(@category) %></span>
      <% if logged_in? and current_user.admin? %>
        <% if @category.articles.empty? %>
          <span class="badge"><%= link_to "Deletar categoria", category_path(@category), method: :delete,
        data: { confirm: "Tem certeza?" } %></span>
        <% end %>
      <% end %>
    </div>
  <% end %>
<div align="center">
  <%= will_paginate @category_articles %>
</div>
<%= render 'articles/index', articles: @category_articles %>
